<nav class="mooze-navbar">
    <div class="navbar-container">
        {{!-- Logo --}}
        <div class="navbar-logo">
            <a href="{{config.wwwroot}}">
                <img src="{{config.wwwroot}}/theme/mooze/pix/logo.png" alt="{{sitename}}">
            </a>
        </div>

        {{!-- Links principais --}}
        <div class="navbar-links">
            <a href="{{config.wwwroot}}" class="nav-link {{#isactivepage}}active{{/isactivepage}}">
                <i class="fas fa-home"></i> Início
            </a>
            <a href="{{config.wwwroot}}/course" class="nav-link">
                <i class="fas fa-graduation-cap"></i> Cursos
            </a>
        </div>

        {{!-- Área do usuário --}}
        <div class="navbar-user">
            {{#loggedin}}
                {{!-- Usuário logado --}}
                <div class="user-menu">
                    <button type="button" class="user-menu-button" id="userMenuButton" aria-expanded="false">
                        <span class="user-name">{{user.username}}</span>
                        <div class="user-avatar">
                            {{{user.profileimage}}}
                        </div>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    
                    <div class="dropdown-menu" id="userDropdown">
                        <a href="{{user.profileurl}}" class="dropdown-item">
                            <i class="fas fa-user"></i> Meu Perfil
                        </a>
                        {{#user.isadmin}}
                            <a href="{{config.wwwroot}}/admin/search.php" class="dropdown-item">
                                <i class="fas fa-cogs"></i> Administração
                            </a>
                        {{/user.isadmin}}
                        <a href="{{config.wwwroot}}/my" class="dropdown-item">
                            <i class="fas fa-th"></i> Painel
                        </a>
                        <a href="{{user.messagesurl}}" class="dropdown-item">
                            <i class="fas fa-envelope"></i> Mensagens
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="{{user.logouturl}}" class="dropdown-item">
                            <i class="fas fa-sign-out-alt"></i> Sair
                        </a>
                    </div>
                </div>
            {{/loggedin}}
            {{^loggedin}}
                {{!-- Usuário não logado --}}
                <a href="{{config.wwwroot}}/login/index.php" class="btn-login">Entrar</a>
            {{/loggedin}}
        </div>
    </div>
</nav>