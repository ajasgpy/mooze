{{!-- Seção de estatísticas e números --}}
<div class="numbers-section">
    <div class="container">
        {{!-- Título principal com destaque --}}
        <div class="numbers-title">
            <h2>Números que mostram nossa excelência</h2>
            <p class="subtitle">Estatísticas que comprovam nossa qualidade</p>
        </div>

        {{!-- Grid de estatísticas --}}
        <div class="numbers-grid">
            {{!-- Item 1: Estudantes --}}
            <div class="numbers-item">
                <div class="icon-wrapper">
                    <i class="fa fa-users" aria-hidden="true"></i>
                </div>
                <div class="number-counter">{{numbers.total_alunos}}+</div>
                <p class="number-label">Estudantes Ativos</p>
            </div>

            {{!-- Item 2: Cursos --}}
            <div class="numbers-item">
                <div class="icon-wrapper">
                    <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                </div>
                <div class="number-counter">{{numbers.total_categorias_nivel1}}+</div>
                <p class="number-label">Cursos Disponíveis</p>
            </div>

            {{!-- Item 3: Países --}}
            <div class="numbers-item">
                <div class="icon-wrapper">
                    <i class="fa fa-globe" aria-hidden="true"></i>
                </div>
                <div class="number-counter">{{numbers.total_cidades}}</div>
                <p class="number-label">Municípios Alcançados</p>
            </div>

            {{!-- Item 4: Certificados --}}
            <div class="numbers-item">
                <div class="icon-wrapper">
                    <i class="fa fa-certificate" aria-hidden="true"></i>
                </div>
                <div class="number-counter">98.000+</div>
                <p class="number-label">Certificados Emitidos</p>
            </div>
        </div>
    </div>
</div> 